<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        
        .arrow-popup, .arrow-popup-top, .arrow-popup-right, .arrow-popup-bottom, .arrow-popup-left {
        width: 50px;
<!--        height: 140px;-->
        color:#ffffff;
        cursor:normal;
        display:-moz-inline-stack;
        display:inline-block;
        font-size:12px;
        font-family:arial;
        padding:.5em 1em;
        position:relative;
        text-align:center;
        text-shadow:0 -1px 1px #111111;
          -webkit-border-top-left-radius:4px ;
        -webkit-border-top-right-radius:4px ;
        -webkit-border-bottom-right-radius:4px ;
        -webkit-border-bottom-left-radius:4px ;
        -khtml-border-top-left-radius:4px ;
        -khtml-border-top-right-radius:4px ;
        -khtml-border-bottom-right-radius:4px ;
        -khtml-border-bottom-left-radius:4px ;
        -moz-border-radius-topleft:4px ;
        -moz-border-radius-topright:4px ;
        -moz-border-radius-bottomright:4px ;
        -moz-border-radius-bottomleft:4px ;
        border-top-left-radius:4px ;
        border-top-right-radius:4px ;
        border-bottom-right-radius:4px ;
        border-bottom-left-radius:4px ;
        -o-box-shadow:0 1px 2px #000000, inset 0 0 0 1px #FFFFFF, inset 0 2px #666666, inset 0 -2px 2px #444444;
        -moz-box-shadow:0 1px 2px #000000, inset 0 0 0 1px #FFFFFF, inset 0 2px #666666, inset 0 -2px 2px #444444;
        -khtml-box-shadow:0 1px 2px #000000, inset 0 0 0 1px #FFFFFF, inset 0 2px #666666, inset 0 -2px 2px #444444;
        -webkit-box-shadow:0 1px 2px #000000, inset 0 0 0 1px #FFFFFF, inset 0 2px #666666, inset 0 -2px 2px #444444;
        box-shadow:0 1px 2px #000000, inset 0 0 0 1px #FFFFFF, inset 0 2px #666666, inset 0 -2px 2px #444444;
        background-color:#3b3b3b;
        background-image:-moz-linear-gradient(top,#555555,#222222);
        background-image:-webkit-gradient(linear,left top,left bottom,color-stop(0,#555555),color-stop(1,#222222));
        }
        
        .arrow-popup:after, .arrow-popup-top:after, .arrow-popup-right:after, .arrow-popup-bottom:after, .arrow-popup-left:after {
        content:"\25B8";
        display:block;
        font-size:2em;
        height:0;
        line-height:0;
        position:absolute;
        }
        
        .arrow-popup:after, .arrow-popup-bottom:after {
        color:#2a2a2a;
        bottom:0;
        left:1px;
        text-align:center;
        text-shadow:1px 0 2px #000000;
        -o-transform:rotate(90deg);
        -moz-transform:rotate(90deg);
        -khtml-transform:rotate(90deg);
        -webkit-transform:rotate(90deg);
        width:100%;
        }
        
        .arrow-popup-top:after {
        bottom:auto;
        color:#4f4f4f;
        left:-2px;
        top:0;
        text-align:center;
        text-shadow:none;
        -o-transform:rotate(-90deg);
        -moz-transform:rotate(-90deg);
        -khtml-transform:rotate(-90deg);
        -webkit-transform:rotate(-90deg);
        width:100%;
        }
        
        .arrow-popup-right:after {
        color:#FFFFFF;
        right:-13.38px;
        top:50%;
        margin-top:-.05em;
        text-shadow:0 1px 2px #000000;
        -o-transform:rotate(0);
        -moz-transform:rotate(0);
        -khtml-transform:rotate(0);
        -webkit-transform:rotate(0);
        }
        
        .arrow-popup-left:after {
        color:#222222;
        left:-0.375em;
        top:50%;
        margin-top:.1em;
        text-shadow:0 -1px 2px #000000;
        -o-transform:rotate(180deg);
        -moz-transform:rotate(180deg);
        -khtml-transform:rotate(180deg);
        -webkit-transform:rotate(180deg);
        } 

        .arrow-popup-content {
            margin-top: 2px;
        }
                
        @external .arrow-popup,.arrow-popup-right;
    </ui:style>            
    
        <g:FlowPanel>                    
            <g:Button ui:field="btnEditAction" addStyleNames="button-action icon-pencil"></g:Button>
            <g:Button ui:field="btnEditDelete" addStyleNames="button-action icon-trash {style.arrow-popup-content}"></g:Button>
            <g:Button ui:field="btnEditRefresh" addStyleNames="button-action icon-arrows-ccw {style.arrow-popup-content}"></g:Button>
            <g:Button ui:field="btnEditInfo" addStyleNames="button-action icon-info {style.arrow-popup-content}"></g:Button>
        </g:FlowPanel>
    
</ui:UiBinder>