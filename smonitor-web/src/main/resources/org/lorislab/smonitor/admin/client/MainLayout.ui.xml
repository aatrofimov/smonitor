<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style src="MainLayout.css" />

    <g:DockLayoutPanel unit="PX">
        <!-- HEADER -->
        <g:north size="30">
            <g:MenuBar vertical="false" ui:field="menuBar">
                <g:MenuItem ui:field="btnAgents">Agents</g:MenuItem>
                <g:MenuItemSeparator />
                <g:MenuItem ui:field="btnSessions">Sessions</g:MenuItem>
                <g:MenuItemSeparator />
                <g:MenuItem ui:field="btnLogout">Logout</g:MenuItem>
            </g:MenuBar>    
        </g:north>
        
        <!-- CENTER -->
        <g:center>
            <g:SimpleLayoutPanel ui:field="mainPanel">
                <g:HTMLPanel>
                    <div align="center">
                        MAIN PANEL
                    </div>
                </g:HTMLPanel>
            </g:SimpleLayoutPanel>
        </g:center>
        
        <!-- FOOTER -->
        <g:south size="20">
            <g:HTMLPanel>
                <div align="center">
                    jBoss session monitor created by <a href='https://github.com/andrejpetras'>Andrej Petras</a>. Version: 
                    <span ui:field="version"></span>
                </div>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>